<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude all data from cloud backup -->
        <exclude domain="root" />
        <exclude domain="cache" />
    </cloud-backup>
    <device-transfer>
        <!-- Allow basic app data transfer -->
        <include domain="root" />
    </device-transfer>
</data-extraction-rules>