{
  "name": "bscan",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "start": "react-native start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:component": "jest --selectProjects component",
    "test:e2e": "jest --selectProjects e2e",
    "test:unit:watch": "jest --selectProjects unit --watch",
    "test:integration:watch": "jest --selectProjects integration --watch",
    "test:component:watch": "jest --selectProjects component --watch",
    "type-check": "tsc --noEmit",
    "type-check:deps": "tsc --noEmit --skipLibCheck false",
    "clean": "npx react-native clean",
    "android:build": "cd android && ./gradlew assembleDebug",
    "android:build:release": "cd android && ./gradlew assembleRelease",
    "android:clean": "cd android && ./gradlew clean",
    "ios:pods": "cd ios && bundle exec pod install",
    "postinstall": "cd ios && bundle install --quiet && bundle exec pod install --quiet || true",
    "dev": "react-native start",
    "dev:android": "concurrently \"npm run start\" \"npm run android\" --names \"metro,android\" --prefix-colors \"blue,green\"",
    "dev:ios": "concurrently \"npm run start\" \"npm run ios\" --names \"metro,ios\" --prefix-colors \"blue,green\"",
    "dev:reset": "npm run clean && npm start -- --reset-cache",
    "metro:start": "npm run start",
    "metro:stop": "pkill -f 'react-native start' || true",
    "metro:status": "lsof -i :8081 || echo 'Metro not running'"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native/new-app-screen": "0.81.1",
    "@react-navigation/bottom-tabs": "^7.4.7",
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/native-stack": "^7.3.26",
    "@types/uuid": "^10.0.0",
    "react": "19.1.0",
    "react-native": "0.81.1",
    "react-native-nfc-manager": "^3.16.3",
    "react-native-pager-view": "^6.9.1",
    "react-native-paper": "^5.14.5",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.16.0",
    "react-native-tab-view": "^4.1.3",
    "react-native-uuid": "^2.0.3",
    "react-native-vector-icons": "^10.3.0",
    "uuid": "^12.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "20.0.0",
    "@react-native-community/cli-platform-android": "20.0.0",
    "@react-native-community/cli-platform-ios": "20.0.0",
    "@react-native/babel-preset": "0.81.1",
    "@react-native/eslint-config": "0.81.1",
    "@react-native/metro-config": "0.81.1",
    "@react-native/typescript-config": "0.81.1",
    "@testing-library/react-native": "^12.9.0",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-test-renderer": "^19.1.0",
    "crypto-js": "^4.2.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "jest-environment-jsdom": "^29.6.3",
    "jest-extended": "^6.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "2.8.8",
    "react-native-crypto-js": "^1.0.0",
    "react-test-renderer": "19.1.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20"
  }
}
