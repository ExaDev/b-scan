{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "echo ${nextRelease.version} > version.txt && ./gradlew assembleRelease bundleRelease -PversionName=${nextRelease.version} -PversionCode=${process.env.GITHUB_RUN_NUMBER} --no-daemon --parallel"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "app/build/outputs/apk/release/app-release.apk",
            "name": "b-scan-${nextRelease.version}.apk",
            "label": "Android APK"
          },
          {
            "path": "app/build/outputs/bundle/release/app-release.aab",
            "name": "b-scan-${nextRelease.version}.aab", 
            "label": "Android App Bundle"
          }
        ],
        "successComment": false,
        "failComment": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "version.txt"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}